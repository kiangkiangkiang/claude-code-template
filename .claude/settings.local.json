{
  "permissions": {
    "allow": [
      "Read(*)",
      "Edit(*)",
      "Write(*)",
      "Bash(rm:*)",
      "WebFetch(domain:*)",
      "Bash(uv :*)",
      "Bash(mkdir:*)",
      "Bash(git :*)",
      "Bash(bash:*)"
    ],
    "deny": [
      "Bash(git push origin main)",
      "Bash(git push origin beta)",
      "Bash(git push origin master)",
      "Bash(git push origin release)",
      "Bash(git reset:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Bash(rm .claude-scripts/*)",
      "Bash(rm -.* .claude-scripts/)",
      "Bash(rm .claude-scripts/**)",
      "Write(.claude-scripts/**)",
      "Edit(.claude-scripts/**)",
      "Bash(gh:*)"
    ],
    "ask": [
      "Bash(git push:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/slack_notify.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/slack_notify.sh"
          }
        ]
      }
    ]
  }
}
